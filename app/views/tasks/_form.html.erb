<%= form_with(model: @tasks, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, '詳細' %>
  <%= f.text_field :status %>
  
  <%= f.submit '登録' %>
  
<% end %>
  
  